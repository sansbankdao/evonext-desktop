{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "evonext-desktop",
    "version": "25.10.3",
    "identifier": "app.evonext",
    "build": {
        "beforeDevCommand": "pnpm dev",
        "devUrl": "http://localhost:1420",
        "beforeBuildCommand": "pnpm build",
        "frontendDist": "../dist"
    },
    "app": {
        "windows": [
            {
                "title": "EvoNext",
                "width": 1280,
                "height": 600
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ]
    },
    "plugins": {
        "permission": {
            "all": false,
            "permissions": [
                "core:default",
                "app:default",
                "plugin:opener:allow-open"
            ]
        }
    }
}
